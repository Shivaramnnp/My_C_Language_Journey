 {
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C File",
            "type": "shell",
            "command": "gcc",
            "args": [
                "'${file}'",
                "-o",
                "'${fileDirname}/${fileBasenameNoExtension}'",
                "&&",
                "'${fileDirname}/${fileBasenameNoExtension}'"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}